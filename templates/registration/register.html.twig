{% extends '_layouts/auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container grid h-screen w-screen flex-col items-center justify-center lg:max-w-none lg:grid-cols-2 lg:px-0 bg-black">
        <a href="/login" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background hover:bg-#8A2BE2 hover:text-#CCCCCC h-10 py-2 px-4 absolute right-4 top-4 md:right-8 md:top-8">
            Login
        </a>
        {{ form_errors(registrationForm) }}
        <div class="hidden h-full bg-muted lg:flex lg:items-center lg:justify-center">
        </div>
        <div class="lg:p-8">
            <div class="mx-auto flex w-full flex-col justify-center space-y-6 sm:w-[350px]">
                <div class="flex flex-col space-y-2 text-center">
                    <h1 class="text-2xl font-semibold tracking-tight text-#8A2BE2">
                        Créer un compte
                    </h1>
                    <p class="text-sm text-#CCCCCC">
                        Entrez vos informations pour vous inscrire.
                    </p>
                </div>
                {{ form_start(registrationForm) }}
                <div class="grid gap-2">
                    <div class="grid gap-1 custom-form">
                        {{ form_row(registrationForm.firstName, {
                            label_attr: {
                                class: 'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70'
                            },
                            attr: {
                                placeholder: 'Jean',
                                class: 'flex h-10 w-full rounded-md border border-input bg-transparent px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50'
                            }
                        }) }}
                    </div>
                    <div class="grid gap-1 custom-form">
                        {{ form_row(registrationForm.lastName, {
                            label_attr: {
                                class: 'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70'
                            },
                            attr: {
                                placeholder: 'Pierre',
                                class: 'flex h-10 w-full rounded-md border border-input bg-transparent px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50'
                            }
                        }) }}
                    </div>
                    <div class="grid gap-1 custom-form">
                        {{ form_row(registrationForm.email, {
                            label_attr: {
                                class: 'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70'
                            },
                            attr: {
                                placeholder: 'nom@exemple.fr',
                                class: 'flex h-10 w-full rounded-md border border-input bg-transparent px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50'
                            }
                        }) }}
                    </div>
                    <div class="grid gap-1 custom-form">
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe',
                            label_attr: {
                                class: 'text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70'
                            },
                            attr: {
                                placeholder: '********',
                                class: 'flex h-10 w-full rounded-md border border-input bg-transparent px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50'
                            }
                        }) }}
                    </div>

                    <button type="submit" class="inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none ring-offset-background bg-#8A2BE2 text-#CCCCCC hover:bg-#8A2BE2/90 h-10 py-2 px-4">
                        Créez votre compte
                    </button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
